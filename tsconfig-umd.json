{
    "compilerOptions": {
        "rootDir": "./lib",
        "moduleResolution": "node",
        "module": "umd",
        "target": "es2015",
        "declaration": true,
        "outDir": "./build/umd",
        "allowJs": true,
        "strict": false,
        "lib": [
            "dom",
            "dom.iterable",
            "es2015.promise",
            "esnext"
        ]
    },
    "exclude": [
        "**/*.node.*"
    ],
    "include": [
        "lib/**/*"
    ]
}